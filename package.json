{
  "name": "node-ts-boilerplate",
  "version": "1.0.0",
  "description": "This project is aimed to give a base ground for people to get started with Node project using typescript.",
  "main": "dist",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "start": "npm run lint && tsc",
    "start:dev": "nodemon -e ts -w ./src -x npm start",
    "test": "npm start && jest dist",
    "test:coverage": "npm start && jest dist --coverage"
  },
  "repository": {
    "type": "git",
    "url": "\\"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|html)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "keywords": [
    "typescript",
    "node.js",
    "boilerplate"
  ],
  "author": "Deepak Mali",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "chai": "^4.2.0",
    "jest": "^25.1.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {}
}
